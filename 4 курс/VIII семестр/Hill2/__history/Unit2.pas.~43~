unit Unit2;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, StdCtrls, ComCtrls;

type
  TForm2 = class(TForm)
    Button1: TButton;
    OpenDialog1: TOpenDialog;
    Edit1: TEdit;
    Button2: TButton;
    SaveDialog1: TSaveDialog;
    Memo1: TMemo;
    Button3: TButton;
    ProgressBar1: TProgressBar;
    ListBox1: TListBox;
    procedure Button1Click(Sender: TObject);
    procedure Button2Click(Sender: TObject);
    procedure Button3Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

  tkey    = array[1 .. 6, 1 .. 6] of byte;
  tcolumn = array[1 .. 6] of byte;

const
  k_6: Tkey = (
                (18, 17, 2, 15, 18, 10),
                (19, 15, 13, 5, 13, 8),
                (11, 7, 11, 2, 19, 13),
                (17, 13, 16, 8, 5, 7),
                (8, 8, 17, 12, 17, 6),
                (3, 11, 2, 1, 10, 3)
              );
  k_6_inv: Tkey = (
                (1, 9, 16, 12, 13, 16),
                (7, 0, 5, 0, 17, 1),
                (0, 4, 17, 3, 10, 2),
                (8, 12, 1, 8, 3, 19),
                (8, 10, 11, 1, 9, 12),
                (4, 11, 4, 0, 7, 13)
              );
  max_size = 20;
var
  Form2: TForm2;
  fi, fo: File;

implementation

{$R *.dfm}

// open file
procedure TForm2.Button1Click(Sender: TObject);
begin
  if OpenDialog1.Execute then
  begin
    Edit1.Text := OpenDialog1.FileName;
    AssignFile(fi, OpenDialog1.FileName);
    Reset(fi, 1);
    Memo1.Lines.Add('Открыт файл '+OpenDialog1.FileName);
    ProgressBar1.Max := FileSize(fi);
    ProgressBar1.Position := 0;
  end;
end;

function MatrixMultiple(c:tcolumn;m:tkey):tcolumn;
var i,j: integer;
    res: tcolumn;
begin
  for i := 1 to 6 do
  for j := 1 to 6 do
    begin
      res[i] := (res[i] + (c[j]*m[j][i])) mod max_size;
    end;
  Result := res;
end;

procedure Compare(var buf:tcolumn);
var i,j: integer;
    res: byte;
begin
  for i := 1 to 6 do
    begin
      res:=0;
      for j:= 1 to max_size do
        begin
          if (StrToInt(Form2.ListBox1.Items[j-1])=buf[i]) then res:=j;
        end;
      buf[i]:=res;
    end;
end;

procedure UnCompare(var buf:tcolumn);
var i: integer;
begin
  for i := 1 to 6 do
          buf[i] := StrToInt(Form2.ListBox1.Items[buf[i]])
end;

procedure Hill_Enc(var buf:tcolumn);
var newbuf: tcolumn;
begin
  Compare(buf);
  Form2.Memo1.Lines.Add('Блок прочитан: ['+IntToStr(buf[1])+' , '+IntToStr(buf[2])+' , '+IntToStr(buf[3])+' , '+IntToStr(buf[4])+' , '+IntToStr(buf[5])+' , '+IntToStr(buf[6])+']');
  buf := MatrixMultiple(buf, k_6);
  Form2.Memo1.Lines.Add('Блок зашифрован: ['+IntToStr(buf[1])+' , '+IntToStr(buf[2])+' , '+IntToStr(buf[3])+' , '+IntToStr(buf[4])+' , '+IntToStr(buf[5])+' , '+IntToStr(buf[6])+']');
end;

procedure Hill_Dec(var buf:tcolumn);
var newbuf: tcolumn;
begin
  Form2.Memo1.Lines.Add('Блок прочитан: ['+IntToStr(buf[1])+' , '+IntToStr(buf[2])+' , '+IntToStr(buf[3])+' , '+IntToStr(buf[4])+' , '+IntToStr(buf[5])+' , '+IntToStr(buf[6])+']');
  buf := MatrixMultiple(buf, k_6_inv);
  Form2.Memo1.Lines.Add('Блок расшифрован: ['+IntToStr(buf[1])+' , '+IntToStr(buf[2])+' , '+IntToStr(buf[3])+' , '+IntToStr(buf[4])+' , '+IntToStr(buf[5])+' , '+IntToStr(buf[6])+']');
  UnCompare(buf);
end;

procedure TForm2.Button2Click(Sender: TObject);
var
  buf: tcolumn;
  count: integer;
  i:integer;
begin
  if SaveDialog1.Execute then
  begin
     AssignFile(fo, SaveDialog1.FileName);
     ReWrite(fo, 1);
     ProgressBar1.Position := 0;
     while not eof(fi) do
     begin
       BlockRead(fi, buf, 6, count);
       if (count<>6) then
       begin
          for i := (count+1) to 6 do buf[i] := 0;
       end;
       Hill_Enc(buf);
       BlockWrite(fo, buf, 6);
       ProgressBar1.Position := ProgressBar1.Position + 6;
     end;
     Memo1.Lines.Add('Сохранен файл '+SaveDialog1.FileName);
     ShowMessage('Сохранено!');
  end;
end;

procedure TForm2.Button3Click(Sender: TObject);
var
  buf: tcolumn;
  count: integer;
  i: integer;
begin
  if SaveDialog1.Execute then
  begin
      AssignFile(fo, SaveDialog1.FileName);
     ReWrite(fo, 1);
     ProgressBar1.Position := 0;
     while not eof(fi) do
     begin
       BlockRead(fi, buf, 6, count);
       if (count<>6) then
       begin
          for i := (count+1) to 6 do buf[i] := 0;
       end;
       Hill_Dec(buf);
       BlockWrite(fo, buf, 6);
       ProgressBar1.Position := ProgressBar1.Position + 6;
     end;
     Memo1.Lines.Add('Сохранен файл '+SaveDialog1.FileName);
     ShowMessage('Сохранено!');
  end;
end;

end.
